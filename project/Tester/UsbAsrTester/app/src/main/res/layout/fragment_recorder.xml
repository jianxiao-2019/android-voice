<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FF232C3D"
    android:gravity="center_horizontal">

    <FrameLayout
        android:id="@+id/start_record"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:background="@drawable/ic_voice_mockup_standby"
        android:scaleX="0.8"
        android:scaleY="0.8">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="90dp"
            android:src="@drawable/ic_voice_record" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="160dp"
            android:fontFamily="sans-serif-medium"
            android:text="Tap to Record"
            android:textColor="#FFFFFF"
            android:textSize="14sp" />
    </FrameLayout>

    <FrameLayout
        android:id="@+id/stop_record"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:background="@drawable/ic_voice_mockup_listening"
        android:scaleX="0.8"
        android:scaleY="0.8"
        android:visibility="gone">

        <TextView
            android:id="@+id/recording_timer_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="94dp"
            android:fontFamily="sans-serif-light"
            android:text="01:35"
            android:textColor="#FFFFFF"
            android:textSize="51sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="155dp"
            android:drawableLeft="@drawable/signal_point_green"
            android:drawablePadding="10dp"
            android:fontFamily="sans-serif-medium"
            android:text="Recording"
            android:textColor="#FFFFFF"
            android:textSize="14sp" />
    </FrameLayout>

    <TextView
        android:id="@+id/status_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="6dp"
        android:layout_marginTop="6dp"
        android:fontFamily="sans-serif-medium"
        android:text="Usb Device Attached."
        android:textColor="#838FA5"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/text_result_l"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/wave_view_left"
        android:layout_alignParentStart="true"
        android:layout_marginStart="6dp"
        android:fontFamily="sans-serif-medium"
        android:text="Usb Device [Left]"
        android:textColor="#838FA5"
        android:textSize="14sp" />

    <com.kika.usbasrtester.wave.view.WaveSurfaceView
        android:id="@+id/wave_view_left"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_above="@+id/text_result_r"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="6dp" />

    <TextView
        android:id="@+id/text_result_r"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/wave_view_right"
        android:layout_alignParentStart="true"
        android:layout_marginStart="6dp"
        android:fontFamily="sans-serif-medium"
        android:text="Usb Device [Right]"
        android:textColor="#838FA5"
        android:textSize="14sp" />

    <com.kika.usbasrtester.wave.view.WaveSurfaceView
        android:id="@+id/wave_view_right"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_above="@+id/text_result_nc"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="6dp" />

    <TextView
        android:id="@+id/text_result_nc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/wave_view_nc"
        android:layout_alignParentStart="true"
        android:layout_marginStart="6dp"
        android:fontFamily="sans-serif-medium"
        android:text="After Noise Cancellation"
        android:textColor="#838FA5"
        android:textSize="14sp"
        android:visibility="gone" />

    <com.kika.usbasrtester.wave.view.WaveSurfaceView
        android:id="@+id/wave_view_nc"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_above="@+id/text_result"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="12dp"
        android:visibility="gone" />

    <ScrollView
        android:id="@+id/result_scroller"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:background="#FF2F3A4F">

        <TextView
            android:id="@+id/result_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingEnd="8dp"
            android:paddingStart="8dp"
            android:textSize="16sp" />
    </ScrollView>

    <TextView
        android:id="@+id/text_result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/result_scroller"
        android:layout_alignParentStart="true"
        android:layout_marginStart="6dp"
        android:fontFamily="sans-serif-medium"
        android:text="Recognize Result"
        android:textColor="#838FA5"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/intermediate_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/text_result"
        android:layout_marginStart="11dp"
        android:layout_toEndOf="@+id/text_result" />

    <TextView
        android:id="@+id/text_size"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/result_scroller"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="8dp" />

    <TextView
        android:id="@+id/text_volume"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/text_size"
        android:layout_alignTop="@+id/status_text"
        android:text=""
        android:textSize="10sp" />

    <TextView
        android:id="@+id/text_version"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="6dp"
        android:gravity="end"
        android:text="ver : 0322_1"
        android:textSize="10sp" />

    <Button
        android:id="@+id/button_down"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/wave_view_left"
        android:layout_alignParentEnd="true"
        android:text="V. down" />

    <Button
        android:id="@+id/button_up"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/button_down"
        android:layout_alignParentEnd="true"
        android:text="V. Up" />

</RelativeLayout>