<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#FF2F3A4F"
    android:gravity="center_vertical"
    android:paddingTop="26dp">

    <TextView
        android:id="@+id/file_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="16dp"
        android:layout_toStartOf="@+id/control_raw"
        android:singleLine="true"
        android:text="Kikago_180124_0020"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/file_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/file_name"
        android:layout_marginStart="16dp"
        android:layout_toStartOf="@+id/control_raw"
        android:singleLine="true"
        android:text="2018/01/24 | 00:20"
        android:textSize="13sp" />

    <TextView
        android:id="@+id/control_raw"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="14dp"
        android:layout_toStartOf="@+id/control_nc"
        android:drawableBottom="@drawable/ic_source_tag_raw"
        android:drawablePadding="-9dp"
        android:drawableTop="@drawable/ic_source_raw_play"
        android:paddingStart="10dp" />

    <TextView
        android:id="@+id/control_nc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="14dp"
        android:layout_marginEnd="16dp"
        android:drawableBottom="@drawable/ic_source_tag_nc"
        android:drawablePadding="-9dp"
        android:drawableTop="@drawable/ic_source_nc_play"
        android:paddingStart="10dp" />

    <LinearLayout
        android:id="@+id/expanded_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/control_raw"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginEnd="16dp"
            android:layout_marginStart="16dp"
            android:background="#6FACB4C4" />

        <TextView
            android:id="@+id/asr_result_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="18dp"
            android:layout_marginEnd="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="18dp"
            android:ellipsize="end" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#44ACB4C4" />

        <Button
            android:id="@+id/button_share"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="6dp"
            android:layout_marginStart="6dp"
            android:text="Share" />

    </LinearLayout>
</RelativeLayout>