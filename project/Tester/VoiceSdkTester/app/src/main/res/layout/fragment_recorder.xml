<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FF232C3D"
    android:gravity="center_horizontal">

    <FrameLayout
        android:id="@+id/start_record"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:background="@drawable/ic_voice_mockup_standby">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="90dp"
            android:src="@drawable/ic_voice_record" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="160dp"
            android:fontFamily="sans-serif-medium"
            android:text="Tap to Record"
            android:textColor="#FFFFFF"
            android:textSize="14sp" />
    </FrameLayout>

    <FrameLayout
        android:id="@+id/stop_record"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:background="@drawable/ic_voice_mockup_listening"
        android:visibility="gone">

        <TextView
            android:id="@+id/recording_timer_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="94dp"
            android:fontFamily="sans-serif-light"
            android:text="01:35"
            android:textColor="#FFFFFF"
            android:textSize="51sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="155dp"
            android:drawableLeft="@drawable/signal_point_yellow"
            android:drawablePadding="10dp"
            android:fontFamily="sans-serif-medium"
            android:text="Recording"
            android:textColor="#FFFFFF"
            android:textSize="14sp" />
    </FrameLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/device_button_layout"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="6dp"
        android:layout_marginTop="14dp"
        android:fontFamily="sans-serif-medium"
        android:text="Record via"
        android:textColor="#838FA5"
        android:textSize="14sp" />

    <LinearLayout
        android:id="@+id/device_button_layout"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_above="@+id/text_recent"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="15dp"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/device_button_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_left"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/signal_kikago"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:src="@drawable/signal_point_empty" />

            <ImageView
                android:layout_width="20dp"
                android:layout_height="30dp"
                android:layout_marginLeft="10dp"
                android:src="@drawable/ic_usbcable" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:fontFamily="sans-serif-medium"
                android:text="KikaGO"
                android:textColor="@color/device_btn_text" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/device_button_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_right"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/signal_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:src="@drawable/signal_point_empty" />

            <ImageView
                android:layout_width="20dp"
                android:layout_height="30dp"
                android:layout_marginLeft="10dp"
                android:src="@drawable/ic_phone" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:fontFamily="sans-serif-medium"
                android:text="Phone"
                android:textColor="@color/device_btn_text" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/text_recent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/recent_area"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="12dp"
        android:layout_marginLeft="20dp"
        android:fontFamily="sans-serif-medium"
        android:text="Recent"
        android:textColor="#838FA5"
        android:textSize="14sp" />

    <FrameLayout
        android:id="@+id/recent_area"
        android:layout_width="match_parent"
        android:layout_height="92dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="12dp"
        android:background="#FF2F3A4F">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/no_recore_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:src="@drawable/ic_list_nodata" />

            <TextView
                android:id="@+id/no_record_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/no_recore_image"
                android:layout_marginStart="14dp"
                android:layout_toEndOf="@+id/no_recore_image"
                android:text="No record file."
                android:textColor="#FFFFFFFF" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/no_record_text"
                android:layout_below="@+id/no_record_text"
                android:text="—/—/—"
                android:textColor="#FFFFFFFF" />
        </RelativeLayout>
    </FrameLayout>

    <TextView
        android:id="@+id/error_hint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/device_button_layout"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="-12dp"
        android:text="Hardware Error !"
        android:textColor="#FFEC316B"
        android:visibility="gone" />
</RelativeLayout>