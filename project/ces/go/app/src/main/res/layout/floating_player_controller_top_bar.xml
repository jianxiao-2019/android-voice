<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/controller_top_btn_repeat"
            android:layout_width="42dp"
            android:layout_height="40dp"
            android:gravity="center"
            android:paddingBottom="4dp"
            android:paddingEnd="4dp"
            android:paddingLeft="6dp"
            android:paddingRight="4dp"
            android:paddingStart="6dp"
            android:paddingTop="4dp"
            android:src="@drawable/ic_close"/>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingEnd="2dp"
            android:paddingLeft="0dp"
            android:paddingRight="2dp"
            android:paddingStart="0dp">

            <ImageView
                android:id="@+id/controller_top_btn_share"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:gravity="center"
                android:paddingBottom="6dp"
                android:paddingLeft="6dp"
                android:paddingRight="6dp"
                android:paddingTop="6dp"
                android:src="@drawable/ic_close"/>

            <ImageView
                android:id="@+id/controller_top_btn_share_icon_new"
                android:layout_width="6dp"
                android:layout_height="6dp"
                android:layout_marginLeft="-8dp"
                android:layout_marginStart="-8dp"
                android:layout_marginTop="4dp"
                android:layout_toRightOf="@+id/controller_top_btn_share"
                android:src="@android:color/holo_red_light"/>

        </RelativeLayout>

        <ImageView
            android:id="@+id/controller_top_btn_favorite"
            android:layout_width="42dp"
            android:layout_height="40dp"
            android:gravity="center"
            android:paddingBottom="4dp"
            android:paddingLeft="6dp"
            android:paddingRight="6dp"
            android:paddingTop="4dp"
            android:src="@drawable/ic_close"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/controller_top_btn_scale_down"
            android:layout_width="42dp"
            android:layout_height="40dp"
            android:gravity="center"
            android:paddingBottom="4dp"
            android:paddingEnd="4dp"
            android:paddingLeft="6dp"
            android:paddingRight="4dp"
            android:paddingStart="6dp"
            android:paddingTop="4dp"
            android:src="@drawable/ic_close"/>

        <ImageView
            android:id="@+id/controller_top_btn_scale_up"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:gravity="center"
            android:paddingBottom="4dp"
            android:paddingLeft="4dp"
            android:paddingRight="4dp"
            android:paddingTop="4dp"
            android:src="@drawable/ic_close"/>

        <ImageView
            android:id="@+id/controller_top_btn_close"
            android:layout_width="42dp"
            android:layout_height="40dp"
            android:paddingBottom="4dp"
            android:paddingEnd="6dp"
            android:paddingLeft="4dp"
            android:paddingRight="6dp"
            android:paddingStart="4dp"
            android:paddingTop="4dp"
            android:src="@drawable/kika_kikago_float_ic_close"/>
    </LinearLayout>

</RelativeLayout>