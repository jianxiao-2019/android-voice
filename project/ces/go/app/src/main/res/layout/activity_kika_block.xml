<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/kika_landing_bg"
    android:gravity="center"
    android:orientation="vertical"
    tools:ignore="SpUsage">

    <!--<ImageView-->
    <!--android:layout_width="wrap_content"-->
    <!--android:layout_height="wrap_content"-->
    <!--android:layout_marginTop="-70dp"-->
    <!--android:src="@drawable/kika_landing_logo"/>-->

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:fontFamily="sans-serif-medium"
        android:text="@string/block_title"
        android:textColor="@android:color/white"
        android:textSize="30dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginTop="15dp"
        android:gravity="center"
        android:lineSpacingExtra="3dp"
        android:text="@string/block_description"
        android:textColor="@android:color/white"
        android:textSize="13sp"/>

    <TextView
        android:id="@+id/block_btn_update"
        android:layout_width="200dp"
        android:layout_height="48dp"
        android:layout_marginTop="64dp"
        android:background="@drawable/selector_bg_report_btn_send"
        android:gravity="center"
        android:text="@string/block_btn_update"
        android:textColor="@drawable/selector_text_report_btn_send"
        android:textSize="20sp"/>

</LinearLayout>