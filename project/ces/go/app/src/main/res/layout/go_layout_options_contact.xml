<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:ignore="SpUsage">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="21dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/default_img_content_description"
            android:src="@drawable/kika_userpic_small_bg"/>

        <ImageView
            android:id="@+id/go_layout_options_contact_avatar_mask"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/go_layout_usr_msg_avatar_margin_left"
            android:layout_marginTop="@dimen/go_layout_usr_msg_avatar_margin_top"
            android:contentDescription="@string/default_img_content_description"
            android:src="@drawable/kika_userpic_small_mask"/>

        <ImageView
            android:id="@+id/go_layout_options_contact_avatar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/go_layout_options_contact_avatar_mask"
            android:layout_alignLeft="@+id/go_layout_options_contact_avatar_mask"
            android:layout_alignRight="@+id/go_layout_options_contact_avatar_mask"
            android:layout_alignTop="@+id/go_layout_options_contact_avatar_mask"
            android:contentDescription="@string/default_img_content_description"/>

        <ImageView
            android:id="@+id/go_layout_options_contact_im_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="90dp"
            android:layout_marginTop="89dp"
            android:contentDescription="@string/default_img_content_description"/>
    </RelativeLayout>

    <TextView
        android:id="@+id/go_layout_options_contact_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:fontFamily="sans-serif-light"
        android:gravity="left"
        android:singleLine="true"
        android:textColor="#b3bdd9"
        android:textSize="@dimen/go_layout_usr_msg_name_text_size"/>

    <LinearLayout
        android:id="@+id/go_layout_options_contact_item"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:orientation="vertical">
    </LinearLayout>

</LinearLayout>