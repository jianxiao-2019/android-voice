<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:ignore="SpUsage">

    <LinearLayout
        android:id="@+id/go_layout_options_title"
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/go_layout_options_title_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <com.kikatech.go.view.widget.GoTextView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/go_layout_options_title_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:ellipsize="end"
            android:gravity="left"
            android:maxLines="3"
            android:textColor="@color/go_layout_option_title_text_color"
            app:max_text_size="@dimen/go_layout_option_title_text_max_size"
            app:min_text_size="@dimen/go_layout_option_title_text_min_size"/>
    </LinearLayout>

    <TextView
        android:id="@+id/go_layout_options_title_emoji_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/go_layout_option_emoji_text_margin_top"
        android:textColor="@color/go_layout_option_title_text_color"
        android:textSize="@dimen/go_layout_option_emoji_text_size"/>

    <LinearLayout
        android:id="@+id/go_layout_options_item"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/go_layout_options_title"
        android:gravity="center_vertical"
        android:orientation="vertical">
    </LinearLayout>

</RelativeLayout>