<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="6dp">

    <EditText
        android:id="@+id/edit_user_speech"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:imeOptions="actionDone"
        android:gravity="top|left"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/button_send_speech"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SEND SPEECH"/>
        <Button
            android:id="@+id/button_reset_context"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="RESET CONTEXT"/>

    </LinearLayout>

    <TextView
        android:id="@+id/text_action_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/darker_gray"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/holo_blue_dark"
        android:text="User:" />
    <TextView
        android:id="@+id/text_user_speech"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/holo_green_dark" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/holo_blue_dark"
        android:text="Bot:"/>
    <TextView
        android:id="@+id/text_bot_speech"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/holo_orange_dark" />



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/holo_blue_dark"
        android:layout_marginTop="70dp"
        android:text="Custom Contact Entities:"/>
    <EditText
        android:id="@+id/edit_user_contact"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:imeOptions="actionDone"
        android:gravity="top|left"/>

</LinearLayout>