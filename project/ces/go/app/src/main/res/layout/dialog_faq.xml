<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="305dp"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_dialog_usb_detached"
    android:orientation="vertical"
    tools:ignore="SpUsage">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <android.support.v4.view.ViewPager
            android:id="@+id/dialog_faq_pager"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:background="@drawable/bg_permission_btn_disable"/>

        <android.support.design.widget.TabLayout
            android:id="@+id/dialog_faq_pager_indicators"
            android:layout_width="match_parent"
            android:layout_height="8dp"
            android:layout_marginTop="12dp"
            app:tabBackground="@drawable/selector_feature_highlight_indicator"
            app:tabGravity="center"
            app:tabIndicatorHeight="0dp"
            app:tabMaxWidth="13dp"
            app:tabMinWidth="13dp"/>

        <TextView
            android:id="@+id/dialog_faq_content"
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:gravity="center"
            android:paddingLeft="13dp"
            android:paddingRight="13dp"
            android:text="@string/drawer_item_report"
            android:textColor="#8e94a9"
            android:textSize="14dp"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#c4c8d9"/>

        <TextView
            android:id="@+id/dialog_btn_apply"
            android:layout_width="match_parent"
            android:layout_height="53dp"
            android:gravity="center"
            android:text="Next"
            android:textColor="#7e8296"
            android:textSize="16dp"/>

    </LinearLayout>

    <ImageView
        android:id="@+id/dialog_btn_cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_margin="18dp"
        android:src="@drawable/kika_ic_settings_faq_popup_dialogue_x"/>

</RelativeLayout>