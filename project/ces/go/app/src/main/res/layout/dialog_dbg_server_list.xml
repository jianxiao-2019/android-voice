<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dialog_margin"
        android:layout_marginRight="@dimen/dialog_margin"
        android:background="@drawable/bg_dialog_usb_detached"
        android:orientation="vertical"
        android:paddingLeft="@dimen/dialog_padding_left_right"
        android:paddingRight="@dimen/dialog_padding_left_right"
        android:paddingTop="@dimen/dialog_padding">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-medium"
            android:text="Change Asr Server"
            android:textColor="#575960"
            android:textSize="18dp"/>

        <RadioGroup
            android:id="@+id/server_list_group"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/underline_width"
            android:layout_marginTop="15dp"
            android:background="@color/underline_color"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dialog_button_height"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/dialog_btn_cancel"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Cancel"
                android:textColor="#7e8296"
                android:textSize="16dp"/>

            <View
                android:layout_width="1px"
                android:layout_height="match_parent"
                android:background="#c4c8d9"/>

            <TextView
                android:id="@+id/dialog_btn_apply"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:fontFamily="sans-serif-medium"
                android:gravity="center"
                android:text="OK"
                android:textColor="#3274e6"
                android:textSize="16dp"/>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>