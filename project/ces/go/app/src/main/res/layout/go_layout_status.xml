<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="@dimen/go_layout_status_bar_height"
              android:gravity="center"
              android:orientation="vertical">

    <TextView
        android:id="@+id/go_layout_status_text"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:gravity="center"
        android:padding="10dp"
        android:textSize="13sp"/>

    <TextView
        android:id="@+id/go_layout_status_text_sleep"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_transparent_round_white"
        android:paddingBottom="10dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:paddingTop="10dp"
        android:text="点击此处暂代语音唤醒"
        android:textColor="@android:color/white"
        android:textSize="13sp"/>
</LinearLayout>