<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:gravity="center_vertical"
              android:orientation="vertical">

    <ImageView
        android:id="@+id/go_layout_speak_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <com.kikatech.go.view.widget.GoTextView
        android:id="@+id/go_layout_speak_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:fontFamily="sans-serif-medium"
        android:gravity="left"
        android:textColor="@color/go_layout_speak_text_color"
        app:max_text_size="@dimen/go_layout_speak_text_max_size"
        app:min_text_size="@dimen/go_layout_speak_text_min_size"/>

</LinearLayout>