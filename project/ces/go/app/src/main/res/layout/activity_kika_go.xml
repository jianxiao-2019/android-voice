<?xml version="1.0" encoding="utf-8"?>
<layout>

    <android.support.v4.widget.DrawerLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/go_drawer_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.kikatech.go.view.GoLayout
                android:id="@+id/go_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

            <ImageView
                android:id="@+id/go_layout_btn_open_drawer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="19dp"
                android:layout_marginTop="19dp"
                android:src="@drawable/kika_settings_ic_drawer"/>

            <FrameLayout
                android:id="@+id/go_layout_top_ic_area"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:gravity="center_vertical">

                <ImageView
                    android:id="@+id/go_layout_ic_help"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/kika_ic_help"/>

                <ImageView
                    android:id="@+id/go_layout_ic_tutorial"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/kika_ic_sandbox_tips"/>

                <ImageView
                    android:id="@+id/go_layout_ic_connection_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:src="@drawable/kika_settings_ic_no_wifi"
                    android:visibility="gone"/>

                <ImageView
                    android:id="@+id/go_layout_ic_microphone_err"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:src="@drawable/kika_settings_ic_microphone_error"
                    android:visibility="gone"/>

                <ImageView
                    android:id="@+id/go_layout_ic_hardware_err"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:src="@drawable/kika_settings_ic_hardware_error"
                    android:visibility="gone"/>
            </FrameLayout>

            <ImageView
                android:id="@+id/go_layout_ic_update_app"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_toLeftOf="@+id/go_layout_top_ic_area"
                android:background="@drawable/kika_ic_alarm"
                android:visibility="gone"/>

            <ImageView
                android:id="@+id/go_layout_ic_usb_attached"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:adjustViewBounds="true"
                android:src="@drawable/kika_ic_plugin_light"
                android:visibility="gone"/>

        </RelativeLayout>

        <include
            android:id="@+id/go_layout_drawer"
            layout="@layout/go_layout_drawer"/>

    </android.support.v4.widget.DrawerLayout>
</layout>