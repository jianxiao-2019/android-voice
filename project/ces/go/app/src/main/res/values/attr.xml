<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="audiowaves__style">
        <attr name="aw_gravity" format="enum">
            <enum name="center" value="0"/>
            <enum name="left" value="1"/>
            <enum name="top" value="2"/>
            <enum name="right" value="3"/>
            <enum name="bottom" value="4"/>
        </attr>
        <attr name="aw_num_waves" format="integer"/>

        <attr name="aw_line_width" format="integer"/>
        <attr name="aw_line_min_width" format="integer"/>
        <attr name="aw_line_min_height" format="integer"/>
        <attr name="aw_line_spacing" format="integer"/>
        <attr name="aw_line_border_radius" format="integer"/>

        <attr name="aw_color_uniform" format="reference"/>
    </declare-styleable>


    <declare-styleable name="GoLayout">
        <attr name="speak_text_size" format="dimension"/>
        <attr name="speak_text_color" format="color"/>
        <attr name="listen_text_size" format="dimension"/>
        <attr name="listen_text_color" format="color"/>
        <attr name="option_title_text_size" format="dimension"/>
        <attr name="option_title_text_color" format="color"/>
        <attr name="option_item_text_size" format="dimension"/>
        <attr name="option_item_text_color" format="color"/>
    </declare-styleable>
</resources>