<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.kikatech.go">

    <uses-permission android:name="android.permission.BLUETOOTH"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>

    <uses-permission android:name="android.permission.CALL_PHONE"/>
    <uses-permission android:name="android.permission.READ_PHONE_STATE"/>
    <uses-permission android:name="android.permission.PROCESS_OUTGOING_CALLS"/>

    <uses-permission android:name="android.permission.RECEIVE_SMS"/>
    <uses-permission android:name="android.permission.RECEIVE_MMS"/>
    <uses-permission android:name="android.permission.READ_SMS"/>
    <uses-permission android:name="android.permission.SEND_SMS"/>

    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION"/>
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION"/>

    <uses-permission android:name="android.permission.READ_CONTACTS"/>

    <uses-permission android:name="android.permission.MODIFY_AUDIO_SETTINGS"/>

    <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW"/>

    <uses-permission android:name="android.permission.WAKE_LOCK"/>

    <application
        android:name=".ui.KikaMultiDexApplication"
        android:allowBackup="true"
        android:icon="@mipmap/app_icon"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/app_icon_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".ui.KikaLaunchActivity"
                  android:launchMode="singleInstance"
                  android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".ui.KikaPermissionsActivity"
                  android:screenOrientation="portrait"/>
        <activity android:name="com.kikatech.go.ui.KikaGoActivity"
                  android:label="KikaGoDebug"
                  android:launchMode="singleInstance"
                  android:icon="@mipmap/ic_launcher_round"
                  android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ui.KikaAccessibilityActivity"
                  android:screenOrientation="portrait"/>
        <activity android:name=".ui.TelephonyActivity"
                  android:launchMode="singleTask"
                  android:screenOrientation="portrait"/>
        <activity android:name=".ui.KikaIMReplyActivity"
                  android:screenOrientation="portrait" />
        <activity android:name=".ui.KikaDebugLogActivity"
            android:screenOrientation="portrait" />
        <activity android:name=".ui.KikaSMSActivity"
                  android:screenOrientation="portrait" />
        <activity android:name=".ui.HotWordActivity"
                  android:screenOrientation="portrait"/>
        <activity android:name=".ui.KikaApiAiActivity"
                  android:screenOrientation="portrait" />
        <activity android:name=".ui.KikaNavigationActivity"
                  android:windowSoftInputMode="adjustResize"
                  android:screenOrientation="portrait"/>
        <activity android:name=".ui.VoiceTestingActivity"
                  android:screenOrientation="portrait" />
        <activity android:name=".ui.KikaDialogFlowActivity"
                  android:screenOrientation="portrait"/>
        <activity android:name=".ui.KikaAlphaUiActivity"
                  android:launchMode="singleInstance"
                  android:configChanges="keyboardHidden|keyboard"
                  android:screenOrientation="portrait"/>
        <activity android:name=".ui.KikaUsbVoiceSourceActivity"
                  android:screenOrientation="portrait"/>
        <activity android:name=".ui.KikaMusicActivity"
                  android:screenOrientation="portrait"/>


        <activity
            android:name=".ui.dialog.KikaStopServiceDialogActivity"
            android:excludeFromRecents="true"
            android:launchMode="singleTask"
            android:screenOrientation="portrait"
            android:taskAffinity=".Dialog"
            android:theme="@style/DialogActivityStyle"/>


        <service
            android:name="com.kikatech.go.accessibility.AccessibilityWatchDog"
            android:permission="android.permission.BIND_ACCESSIBILITY_SERVICE">

            <intent-filter>
                <action android:name="android.accessibilityservice.AccessibilityService" />
            </intent-filter>

            <meta-data
                android:name="android.accessibilityservice"
                android:resource="@xml/detection_service_config" />
        </service>
        <service android:name=".notification.NotificationWatchDog"
            android:label="@string/app_name"
            android:permission="android.permission.BIND_NOTIFICATION_LISTENER_SERVICE">
            <intent-filter>
                <action android:name="android.service.notification.NotificationListenerService" />
            </intent-filter>
        </service>
        <service android:name=".navigation.NavigationService"/>
        <service android:name=".services.DialogFlowForegroundService"/>
        <service android:name=".services.MusicForegroundService"/>


        <receiver android:name="com.kikatech.go.dialogflow.telephony.PhoneStateReceiver">
            <intent-filter>
                <action android:name="android.intent.action.PHONE_STATE"/>
                <action android:name="android.intent.action.NEW_OUTGOING_CALL"/>
            </intent-filter>
        </receiver>
        <receiver android:name=".message.sms.SmsBroadcastReceiver"
            android:enabled="true"
            android:exported="true" >
            <intent-filter>
                <action android:name="android.provider.Telephony.SMS_RECEIVED"
                    android:priority="999"/>
            </intent-filter>
        </receiver>


        <meta-data android:name="io.fabric.ApiKey"
                   android:value="4678fe8687ebf9670e96837e03d38911c64e3551"/>
    </application>
</manifest>