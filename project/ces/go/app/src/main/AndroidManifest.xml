<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.kikatech.go">

    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <uses-permission android:name="android.permission.INTERNET" />

    <uses-permission android:name="android.permission.MODIFY_AUDIO_SETTINGS"/>

    <uses-permission android:name="android.permission.RECEIVE_SMS"/>
    <uses-permission android:name="android.permission.READ_SMS"/>
    <uses-permission android:name="android.permission.SEND_SMS"/>
    <uses-permission android:name="android.permission.RECEIVE_MMS"/>
    <uses-permission android:name="android.permission.READ_CONTACTS"/>

    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>

    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION"/>
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION"/>
    <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW"/>

    <application
        android:name=".ui.KikaMultiDexApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".ui.KikaLaunchActivity"
                  android:launchMode="singleInstance"
                  android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".ui.KikaPermissionsActivity"
                  android:screenOrientation="portrait"/>
        <activity android:name="com.kikatech.go.ui.KikaGoActivity"
                  android:launchMode="singleInstance"
                  android:screenOrientation="portrait"/>
        <activity android:name=".ui.KikaAccessibilityActivity"
                  android:screenOrientation="portrait"/>
        <activity android:name=".ui.TelephonyActivity"
                  android:launchMode="singleTask"
                  android:screenOrientation="portrait"/>
        <activity android:name=".ui.KikaIMReplyActivity"
                  android:screenOrientation="portrait" />
        <activity android:name=".ui.KikaSMSActivity"
                  android:screenOrientation="portrait" />
        <activity android:name=".ui.HotWordActivity"
                  android:screenOrientation="portrait"/>
        <activity android:name=".ui.KikaApiAiActivity"
                  android:screenOrientation="portrait" />
        <activity android:name=".ui.KikaNavigationActivity"
                  android:windowSoftInputMode="adjustResize"
                  android:screenOrientation="portrait"/>
        <activity android:name=".ui.VoiceTestingActivity"
                  android:screenOrientation="portrait" />
        <activity android:name=".ui.KikaDialogFlowActivity"
                  android:screenOrientation="portrait"/>
        <activity android:name=".ui.KikaAlphaUiActivity"
                  android:screenOrientation="portrait"/>

        <receiver android:name="com.kikatech.go.dialogflow.telephony.PhoneStateReceiver">
            <intent-filter>
                <action android:name="android.intent.action.PHONE_STATE"/>
                <action android:name="android.intent.action.NEW_OUTGOING_CALL"/>
            </intent-filter>
        </receiver>

        <service
            android:name="com.kikatech.go.accessibility.AccessibilityWatchDog"
            android:permission="android.permission.BIND_ACCESSIBILITY_SERVICE">

            <intent-filter>
                <action android:name="android.accessibilityservice.AccessibilityService" />
            </intent-filter>

            <meta-data
                android:name="android.accessibilityservice"
                android:resource="@xml/detection_service_config" />
        </service>
        <service android:name=".notification.NotificationWatchDog"
            android:label="@string/app_name"
            android:permission="android.permission.BIND_NOTIFICATION_LISTENER_SERVICE">
            <intent-filter>
                <action android:name="android.service.notification.NotificationListenerService" />
            </intent-filter>
        </service>
        <service android:name=".navigation.NavigationService"/>

        <receiver android:name=".message.sms.SmsBroadcastReceiver"
            android:enabled="true"
            android:exported="true" >
            <intent-filter>
                <action android:name="android.provider.Telephony.SMS_RECEIVED"
                    android:priority="999"/>
            </intent-filter>
        </receiver>
    </application>

</manifest>